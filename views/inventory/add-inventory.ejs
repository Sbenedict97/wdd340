<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Add Inventory Item</title>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <h1>Add a New Inventory Item</h1>

        <% if (message) { %>
            <p><%= message %></p>
        <% } %>

        <form action="/inv/inventory" method="POST" id="addInventoryForm">
            <label for="invMake">Make:</label>
            <input type="text" name="inv_make" id="invMake" value="<%= inv_make || '' %>" required />

            <label for="invModel">Model:</label>
            <input type="text" name="inv_model" id="invModel" value="<%= inv_model || '' %>" required />

            <label for="invPrice">Price:</label>
            <input type="number" name="inv_price" id="invPrice" value="<%= inv_price || '' %>" required />

            <label for="classificationList">Classification:</label>
            <%= classificationList %>

            <button type="submit">Add Inventory</button>
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
